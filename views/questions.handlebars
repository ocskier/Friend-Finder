  $("#add-btn").on("click", function(event) {
    event.preventDefault();

    // Here we grab the form elements

    var answers = [];
    for (i=0;i<10;i++) {
      var answer = parseInt($("#"+i).val());
      answers.push(answer);
    }
    var newFriend = {
      Name: $("#firstName").val().trim()+" "+$("#lastName").val().trim(),
      Pic: $("#basic-url").val(),
      Answers: answers
    };

    console.log(newFriend);

    // This line is the magic. It"s very similar to the standard ajax function we used.
    // Essentially we give it a URL, we give it the object we want to send, then we have a "callback".
    // The callback is the response of the server. In our case, we set up code in api-routes that "returns" true or false
    // depending on if a tables is available or not.

    $.ajax({ url: "/api/friends", method: "GET" })
      .then(function(friendsData) {

        var newMatch = {};
        var lowScore = 100,nextScore=0;
        for (i=0;i<friendsData.length;i++) {
          for (j=0;j<10;j++) {
            nextScore+=Math.abs(friendsData[i].Answers[j]-newFriend.Answers[j]);
            console.log(nextScore);
          }
          if (nextScore<lowScore) {
            lowScore=nextScore;
            localStorage.setItem("Score",lowScore);
            newMatch = friendsData[i];
          }
          nextScore=0;
        }

        $('.modal').modal({onCloseEnd:function() {
          window.location.href="/friends";
          }});

        $.post("/api/match", newMatch,
          function(data) {

            if (data) {
              console.log(1);
              $.post("/api/friends", newFriend, function(data) {
                  if (data) {
                    console.log(2);
                    $.ajax({ url: "/api/match", method: "GET" })
                      .then(function(matchListData) {
                        $("#matchCard .card-image img").attr("src",matchListData[0].Pic);
                        $("#matchCard .card-content span").append(matchListData[0].Name);
                        $("#matchCard .card-reveal span").append('<br>'+matchListData[0].Answers+'<br><br>').append("Compatibilty Score: "+localStorage.getItem("Score"));
                      });
